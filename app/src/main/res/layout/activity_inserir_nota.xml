<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/inserir_nota_campo_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autofillHints="no"
            android:background="@android:color/transparent"
            android:hint="@string/titulo"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#78909C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inserir_nota_campo_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="name"
            android:background="@android:color/transparent"
            android:hint="@string/descricao"
            android:inputType="textShortMessage|textMultiLine"
            android:minHeight="48dp"
            android:textColorHint="#78909C"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/inserir_nota_campo_titulo"
            app:layout_constraintStart_toStartOf="@id/inserir_nota_campo_titulo"
            app:layout_constraintTop_toBottomOf="@id/inserir_nota_campo_titulo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>